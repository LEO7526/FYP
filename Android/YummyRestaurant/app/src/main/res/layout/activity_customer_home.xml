<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Top Bar -->
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/white">

            <!-- Menu Icon (Top Left) -->
            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Cart Icon (Top Right) -->
            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart"
                android:contentDescription="Cart"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <!-- App Title (Centered) -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/merchant_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />
        </RelativeLayout>


        <!-- Search Bar -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search menu..."
            android:layout_below="@id/topBar"
            android:layout_margin="16dp"
            android:background="@drawable/search_bar_bg"
            android:padding="12dp" />

        <!-- Filter Spinners -->
        <LinearLayout
            android:id="@+id/filterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchBar"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spiceSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />

            <Spinner
                android:id="@+id/tagSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Loading Spinner -->
        <ProgressBar
            android:id="@+id/loadingSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <!-- Menu List -->

        <!-- Bottom Function Bar -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/filterContainer"
            android:layout_above="@id/bottomFunctionBar"
            android:padding="16dp" />

        <LinearLayout
            android:id="@+id/bottomFunctionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">


            <!-- Browse menu icon -->
            <ImageView
                android:id="@+id/orderBellIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_order_bell"
                android:contentDescription="Order Food"
                android:layout_margin="8dp"
                android:background="@drawable/customer_main_page_function_item_background"
                android:padding="8dp"
                android:scaleType="centerInside" />

            <!-- Coupon Icon -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/customer_main_page_function_item_background">

                <ImageView
                    android:id="@+id/couponIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Coupon"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_coupon" />
            </FrameLayout>

<!--membership icon-->
            <ImageView
                android:id="@+id/membershipIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_qr"
                android:contentDescription="Membership"
                android:layout_margin="8dp"
                android:scaleType="centerInside"
                android:background="@drawable/customer_main_page_function_item_background_unique"
                android:padding="8dp" />


<!--            order record icon-->
            <ImageView
                android:id="@+id/orderRecordIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_order_record"
                android:contentDescription="Order Record"
                android:layout_margin="8dp"
                android:scaleType="centerInside"
                android:background="@drawable/customer_main_page_function_item_background"
                android:padding="8dp" />



            <!-- Profile Icon -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:contentDescription="Profile"
                android:src="@drawable/ic_profile"
                android:background="@drawable/customer_main_page_function_item_background"
                android:padding="8dp"
                android:scaleType="centerInside" />
        </LinearLayout>

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>