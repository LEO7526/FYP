<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CouponDetailActivity">

    <!-- Coupon Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Coupon Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Terms & Conditions -->
    <TextView
        android:id="@+id/tvTerms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Terms and conditions will appear here..."
        android:textSize="16sp"
        android:padding="16dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/tvRequiredPoints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Required Points -->
    <TextView
        android:id="@+id/tvRequiredPoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Points required: 0"
        android:textSize="16sp"
        android:textStyle="italic"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/tvRemainingPoints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Remaining Points -->
    <TextView
        android:id="@+id/tvRemainingPoints"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remaining points: -"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnRedeem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Redeem Button -->
    <Button
        android:id="@+id/btnRedeem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Redeem"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom navigation / function bar -->
    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_function_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
