<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- 頂部導覽列 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:elevation="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dish Management"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View List"/>
    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Tab 1: Create Form -->
        <ScrollView
            android:id="@+id/viewCreate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 1. 圖片 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edit_text_background">
                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/llSelectImagePrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to select photo"
                            android:textColor="#888888"/>
                        <Button
                            android:id="@+id/btnSelectImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Browse Gallery"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    </LinearLayout>
                </FrameLayout>

                <!-- 2. 基本資料 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Basic Info"
                    style="@style/SectionTitle"/>

                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Price ($)"
                        android:inputType="numberDecimal"
                        style="@style/InputStyle"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="0dp"/>
                    <Spinner
                        android:id="@+id/spCategory"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_background"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical">
                    <Spinner
                        android:id="@+id/spSpice"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_background"
                        android:layout_marginEnd="8dp"/>
                    <CheckBox
                        android:id="@+id/cbAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:checked="true"/>
                </LinearLayout>

                <!-- 3. 多語言內容 (卡片式) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dish Details (Multi-Language)"
                    style="@style/SectionTitle"
                    android:layout_marginTop="24dp"/>

                <!-- English -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:contentPadding="12dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                        <TextView android:text="English" android:textStyle="bold" android:textColor="#1976D2" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etNameEn" android:hint="Dish Name" style="@style/InputStyle" android:layout_marginBottom="8dp"/>
                        <EditText android:id="@+id/etDescEn" android:hint="Description" style="@style/InputStyle" android:layout_marginBottom="0dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Traditional -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:contentPadding="12dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                        <TextView android:text="繁體中文" android:textStyle="bold" android:textColor="#00796B" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etNameTw" android:hint="菜色名稱" style="@style/InputStyle" android:layout_marginBottom="8dp"/>
                        <EditText android:id="@+id/etDescTw" android:hint="描述" style="@style/InputStyle" android:layout_marginBottom="0dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:contentPadding="12dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                        <TextView android:text="简体中文" android:textStyle="bold" android:textColor="#E64A19" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etNameCn" android:hint="菜色名称" style="@style/InputStyle" android:layout_marginBottom="8dp"/>
                        <EditText android:id="@+id/etDescCn" android:hint="描述" style="@style/InputStyle" android:layout_marginBottom="0dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recipe Materials"
                    style="@style/SectionTitle"/>
                <LinearLayout
                    android:id="@+id/llRecipeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
                <Button
                    android:id="@+id/btnAddMaterial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add Ingredient"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>

                <Button
                    android:id="@+id/btnSaveDish"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Create Dish"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="50dp"/>

            </LinearLayout>
        </ScrollView>

        <!-- Tab 2: List View -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDishList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="8dp"
            android:clipToPadding="false"/>

    </FrameLayout>
</LinearLayout>