<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Top Bar -->
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- FrameLayout container around cart icon -->
            <FrameLayout
                android:id="@+id/cartIconContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/cartIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_cart"
                    android:contentDescription="Cart" />

                <TextView
                    android:id="@+id/cartBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:minWidth="18dp"
                    android:minHeight="18dp"
                    android:background="@drawable/badge_circle_red_scalable"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </FrameLayout>

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/merchant_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- Search Bar -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search menu..."
            android:layout_below="@id/topBar"
            android:layout_margin="16dp"
            android:background="@drawable/search_bar_bg"
            android:padding="12dp" />

        <!-- Filter Buttons (scrollable row) -->
        <HorizontalScrollView
            android:id="@+id/filterScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchBar"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/filterContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAll"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="12dp"
                    android:text="All Dishes"
                    android:textSize="12sp"
                    android:textColor="@color/purple_700"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/purple_700"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/purple_200" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAppetizers"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="12dp"
                    android:text="Appetizers"
                    android:textSize="12sp"
                    android:textColor="@color/purple_700"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/purple_700"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/purple_200" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMainCourses"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="12dp"
                    android:text="Main Courses"
                    android:textSize="12sp"
                    android:textColor="@color/purple_700"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/purple_700"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/purple_200" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSoup"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="12dp"
                    android:text="Soup"
                    android:textSize="12sp"
                    android:textColor="@color/purple_700"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/purple_700"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/purple_200" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDessert"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="12dp"
                    android:text="Dessert"
                    android:textSize="12sp"
                    android:textColor="@color/purple_700"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/purple_700"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/purple_200" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDrink"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="12dp"
                    android:text="Drink"
                    android:textSize="12sp"
                    android:textColor="@color/purple_700"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/purple_700"
                    app:strokeWidth="1dp"
                    app:rippleColor="@color/purple_200" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Loading Spinner -->
        <ProgressBar
            android:id="@+id/loadingSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <!-- Menu List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/filterScroll"
            android:layout_above="@id/bottomFunctionBar"
            android:padding="16dp"
            android:clipToPadding="false" />

        <!-- Bottom Function Bar -->
        <include
            android:id="@+id/bottomFunctionBar"
            layout="@layout/bottom_function_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>