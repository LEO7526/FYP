<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coupon Title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetailType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10% OFF"
            android:textSize="18sp"
            android:textColor="#E65100"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- 基本資訊區 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required Points:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetailPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiry Date:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetailExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-12-31"
            android:layout_marginBottom="8dp"/>

        <!-- 分隔線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="10dp"/>

        <!-- 規則區 (修正這裡的 & 符號) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rules &amp; Constraints:"
            android:textStyle="bold"
            android:textColor="#1976D2"/>

        <TextView
            android:id="@+id/tvDetailRules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp"/>

        <!-- 適用範圍 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicable To:"
            android:textStyle="bold"
            android:textColor="#388E3C"/>

        <TextView
            android:id="@+id/tvDetailScope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp"/>

        <!-- 分隔線 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="10dp"/>

        <!-- 翻譯預覽 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview (繁體):"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetailTransTW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btnCloseDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:backgroundTint="#757575"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>