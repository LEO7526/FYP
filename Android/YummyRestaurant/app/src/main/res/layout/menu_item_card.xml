<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    cardview:cardCornerRadius="12dp"
    cardview:cardElevation="6dp"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Dish Image -->
        <ImageView
            android:id="@+id/dishImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@drawable/image_rounded_bg"
            android:contentDescription="@string/menu_item_image_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Dish Name -->
        <TextView
            android:id="@+id/dishName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/dish_name_placeholder"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/dishImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dish Description -->
        <TextView
            android:id="@+id/dishDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dish_description_placeholder"
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/dishName"
            app:layout_constraintTop_toBottomOf="@id/dishName"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dish Price -->
        <TextView
            android:id="@+id/dishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dish_price_placeholder"
            android:textSize="14sp"
            android:textColor="#FF5722"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/dishName"
            app:layout_constraintTop_toBottomOf="@id/dishDescription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed" />

        <!-- Spice Level Bar -->
        <LinearLayout
            android:id="@+id/spiceIconContainer"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/dishPrice"
            app:layout_constraintTop_toTopOf="@id/dishPrice"
            app:layout_constraintBottom_toBottomOf="@id/dishPrice"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>